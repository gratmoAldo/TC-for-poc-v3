<% form_for(@service_request) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :sr_number %><br />
    <%= f.text_field :sr_number %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :severity %><br />
    <%= f.select :severity, [['S1',1],['S2',2],['S3',3],['S4',4],['S5',5]] %>
  </p>
  <p>
    <%= f.label :escalation %><br />
    <%= f.select :escalation, [['not escalated',0],['E1',1],['E2',2],['E3',3],['E4',4],['E5',5]] %>
  </p>
  <p>
    <%= f.label :handling %><br />
    <%= f.select :handling, ServiceRequest::SR_HANDLING %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, ServiceRequest::SR_STATUSED %>
  </p>
  <p>
    <%= f.label :product %><br />
    <%= f.select :product, ServiceRequest::SR_PRODUCTS %>
  </p>
  <p>
    <%= f.label :version %><br />
    <%= f.select :version, ServiceRequest::SR_VERSIONS %>
  </p>
  <p>
    <%= f.label :serial %><br />
    <%= f.text_field :serial %>
  </p>
  <p>
    <%= f.label :next_action_at %><br />
    <%= f.datetime_select :next_action_at %>
  </p>
  <p>
    <%= f.label :site_id %><br />
    <%= f.select :site_id, Site.all.collect{|s| [ s.name, s.id] } %>
  </p>
  <p>
    <%= f.label :contact_id %><br />
    <%= f.select :contact_id, User.active.collect{|u| [ u.fullname, u.id] } %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
    <%= f.select :owner_id, User.employees.active.collect{|u| [ u.fullname, u.id] } %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
